{   % whileDo exit
    
    var bool : boolean
    var num : integer
    
    num := 10
    bool := true
    
    while bool
    do 
        {
            num := num - 1
        
            while bool 
            do
            {
                exit
            }
            
            if num = 0
            then bool := false
         }
        
    
    while bool
    do {
        num := num + 10
        if num = 29
        then exit
       }
    
    write "Expected 0 ", "But got ", num, newline 
}
